<!-- This is a container for the form -->
<div class="container">
  <!-- This is the form -->
  <form action="/register" method="POST">
    <!-- This is a form group for the full name input -->
    <div class="form-group">
      <!-- This is a label for the full name input -->
      <label for="exampleInputFullName">Full Name</label>
      <!-- This is the full name input field -->
      <input type="text" class="form-control" id="exampleInputFullName" placeholder="Enter full name">
    </div>
    <!-- This is a form group for the email input -->
    <div class="form-group">
      <!-- This is a label for the email input -->
      <label for="exampleInputEmail1">Email address</label>
      <!-- This is the email input field -->
      <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
      <!-- This is a small text that provides additional information about the email input -->
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <!-- This is a form group for the password input -->
    <div class="form-group">
      <!-- This is a label for the password input -->
      <label for="exampleInputPassword1">Password</label>
      <!-- This is the password input field -->
      <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
    </div>
    <!-- This is a submit button for the form -->
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>